<!DOCTYPE HTML>
<HTML>
    <head>
        <!-- Make site responsive on mobile/tablet -->
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>GoCamp</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <link href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.7/paper/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">
        <link rel="stylesheet" href="/stylesheets/main.css">
    </head>
    <body>
        
    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header" >
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                  <span class="sr-only">Toggle navigation</span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                </button>
    
                <a class="navbar-brand" href="/">howTO</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
              <ul class="nav navbar-nav">
                <li class="<%= typeof page !== 'undefined' && page === 'courses' ? 'active' : '' %>"><a href="/courses">Browse</a></li>
              </ul>
              <ul class="nav navbar-nav">
                <li class="<%= typeof page !== 'undefined' && page === 'courses' ? 'active' : '' %>"><a href="/courses/become-teacher">Become a teacher</a></li>
              </ul>
              <ul class="nav navbar-nav navbar-right">
                  <% if(!currentUser){ %>
                      <li class="<%= typeof page !== 'undefined' && page === 'login' ? 'active' : '' %>"><a href="/login">Login</a></li>
                      <li class="<%= typeof page !== 'undefined' && page === 'register' ? 'active' : '' %>"><a href="/register">Sign Up</a></li>
                  <% } else { %>
                      <li><a href="/users/<%= currentUser.id %>">
                        <% if(currentUser && currentUser.isAdmin) { %>
                            <i class="fas fa-wrench"></i>
                        <% } %>
                        <img id="profile-pic" src="<%= currentUser.avatar %>" alt="user profile image">
                        Signed In As <%= currentUser.username %>                        
                        </a></li>
                      <li><a href="/logout">Logout</a></li>
                  <% } %>
              </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <!--error still equals undefined even when no error, empty array is truthy-->
            <% if(error && error.length > 0){ %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>
        <% if(success && success.length > 0){ %>
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
        <% } %>
    </div>
    
